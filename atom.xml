    <title>Windows 右键菜单快速验证文件哈希</title>
    <link href="https://surfer-qian.top/Windows/Windows%20%E5%8F%B3%E9%94%AE%E8%8F%9C%E5%8D%95%E5%BF%AB%E9%80%9F%E9%AA%8C%E8%AF%81%E6%96%87%E4%BB%B6%E5%93%88%E5%B8%8C/"/>
    <id>https://surfer-qian.top/Windows/Windows%20%E5%8F%B3%E9%94%AE%E8%8F%9C%E5%8D%95%E5%BF%AB%E9%80%9F%E9%AA%8C%E8%AF%81%E6%96%87%E4%BB%B6%E5%93%88%E5%B8%8C/</id>
